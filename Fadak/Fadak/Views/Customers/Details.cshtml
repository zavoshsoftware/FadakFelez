@model Fadak.Models.ViewModels.CustomerDetailViewModel

@{
    ViewBag.Title =Model.CurrentCustomer.TitleStr;
}
@section breadcrumb{
    <div class="inner-breadcrumb">
        <ul>
            <li><a href="/">@Resources.StaticTexts.MenuHome</a></li>
            <li><a href="/customer">@Resources.StaticTexts.MenuCustomer</a></li>
            <li>@Model.CurrentCustomer.TitleStr</li>
        </ul>
    </div>
}

@section PageTitle{
  @Model.CurrentCustomer.TitleStr
}
<section class="inner-wrapper inner-property-details">
    <diV class="container">
 
        <div class="offset-top-60 better-property">
            <div class="row">

                <div class="col-sm-12 col-md-12 no-padding">
                    <div class="tab-content drtl">
                        <div class="tab-pane active" id="description">
                            <h2>@Model.CurrentCustomer.TitleStr</h2>
                            @Html.Raw(Model.CurrentCustomer.DetailStr)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row offset-top-60 better-property similar-properites">
            <h2>سایر مشتریان</h2>
            <div id="similar-properties" class="owl-carousel owl-theme">
                @foreach (var item in Model.SimilarCustomers)
                {
                    <div class="item">
                        <div class="property-callout">
                            <div class="property-img">
                                <img src="@item.ImageUrl" alt="@item.TitleStr">
                                <div class="property-details">
                                    <p>
                                        @item.SummeryStr
                                    </p>
                                </div>
                            </div>
                            <div class="callout-content">
                                <h3>
                                    @item.TitleStr
                                </h3>
                                <a href="/customer/@item.Id">@Resources.StaticTexts.ReadMore <i class="fa fa-angle-left" aria-hidden="true"></i></a>
                                <div class="share-property">
                                    <a href="/customer/@item.Id" class="view-details">@Resources.StaticTexts.ReadMore <i class="fa fa-angle-left" aria-hidden="true"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </diV>
</section>
