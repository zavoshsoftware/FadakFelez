@model Fadak.Models.Sliders

@{
    ViewBag.Title = "افزودن " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>افزودن @Html.DisplayNameFor(model => model)</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.BigTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.BigTitle)

                @Html.ValidationMessageFor(model => model.BigTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BigTitle_En, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.BigTitle_En)

                @Html.ValidationMessageFor(model => model.BigTitle_En)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SmallTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.SmallTitle)

                @Html.ValidationMessageFor(model => model.SmallTitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SmallTitle_En, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.SmallTitle_En)

                @Html.ValidationMessageFor(model => model.SmallTitle_En)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FirstLinkText, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.FirstLinkText)

                @Html.ValidationMessageFor(model => model.FirstLinkText)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FirstLinkText_En, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.FirstLinkText_En)

                @Html.ValidationMessageFor(model => model.FirstLinkText_En)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FirsLinkAddress, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.EditorFor(model => model.FirsLinkAddress)

                @Html.ValidationMessageFor(model => model.FirsLinkAddress)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageUrl, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                    @Html.Kendo().Upload().Name("fileUpload").Multiple(false)
                @Html.ValidationMessageFor(model => model.ImageUrl)
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
				@Html.ActionLink("بازگشت به فهرست", "Index")
            </div>
        </div>
    
</div>
}

